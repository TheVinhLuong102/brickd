{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "command": "make",
    "args": [
        "-s",
        "-C", "build"
    ],
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "taskName": "all",
            "problemMatcher": "$valac",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
